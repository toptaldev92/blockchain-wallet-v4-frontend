{
  "name": "blockchain-info-components",
  "version": "0.0.1",
  "description": "Website containing the components documentation",
  "main": "lib/index.js",
  "module": "src/index.js",
  "scripts": {
    "prepublish": "rm -rf lib && babel --out-dir lib --copy-files src",
    "storybook:start": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "author": "(Dream Team) Blockchain.info",
  "license": "ISC",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/../../coverage/v4-components",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|svg|ttf|woff|woff2)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "standard": {
    "globals": [
      "jest",
      "test",
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.16",
    "@storybook/addon-info": "^3.2.16",
    "@storybook/cli": "^3.2.4",
    "@storybook/react": "^3.2.4",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.3.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^7.0.1",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "jest-css-modules": "^1.1.0",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "styled-components": "^2.2.3"
  },
  "dependencies": {
    "polished": "^1.9.0",
    "ramda": "^0.25.0",
    "react-onclickoutside": "^6.7.1"
  },
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "styled-components": "^2.1.0"
  }
}
