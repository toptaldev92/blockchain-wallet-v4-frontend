{
  "name": "blockchain-info-components",
  "version": "0.0.1",
  "description": "Website containing the components documentation",
  "license": "ISC",
  "author": "(Dream Team) Blockchain.info",
  "main": "lib/index.js",
  "module": "src/index.js",
  "scripts": {
    "prepublish": "rm -rf lib && babel --out-dir lib --copy-files src",
    "storybook:build": "build-storybook",
    "storybook:start": "start-storybook -p 6006",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/../../coverage/blockchain-info-components",
    "coverageReporters": [
      "json",
      "html"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|svg|ttf|woff|woff2)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/../../node_modules/babel-jest"
    }
  },
  "dependencies": {
    "polished": "^1.9.0",
    "ramda": "^0.25.0",
    "react-onclickoutside": "^6.7.1"
  },
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "styled-components": "^2.1.0"
  },
  "standard": {
    "globals": [
      "jest",
      "test",
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  }
}
